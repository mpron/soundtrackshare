.container
  %h1.text-center Sign in
  .formbox
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .row
        .form-group.margin-space
          = f.email_field :email, :autofocus => true, placeholder: "Email", class: "form-control input-lg"
      .row
        .form-group
          = f.password_field :password, placeholder: "Password", class: "form-control input-lg"
      .row
        .text-center
          .form-group
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me
      .row
        .text-center
          = f.submit "Sign in", class: "btn btn-block btn-lg btn-primary margin-space"
      .row
        .text-center
          .form-group.devise-links
            = render "devise/shared/links"