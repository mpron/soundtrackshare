<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Sign up</h1>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => 'form', :class => 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, :class => "form-control input-lg", :placeholder => "Enter name" %>
          </div>
        </div>
      </div>
    <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="form-control input-lg">
          <%= f.email_field :email, placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="form-control input-lg">
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <div class="form-control input-lg">
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-control">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-control">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>