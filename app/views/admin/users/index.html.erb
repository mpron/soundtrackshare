<% if can? :read, @users %>
<h1 class="text-center">All Users</h1>
<div class="container">
  <% @users.each do |u| %>
    <div class="row userbox">
      <div class="col-sm-offset-4 col-sm-3">
        <h3><%= link_to u.name, user_path(u) %></h3>
      </div>
      <div class="col-sm-2" style="padding-top: 19px;">
        <% if can? :destroy, u %>
          <%= link_to "Delete User", u, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this user?' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
<% end %>