<div class="text-center post">
  <small><%= link_to post.user.name, user_path(post.user) %></small>
  <div class="video-container">
    <iframe allowFullScreen="true" allowscriptaccess="always" frameborder="0" height="430" src="http://www.youtube.com/embed/<%= post.formatted_url %>" title="YouTube video player" width="640"></iframe>
  </div>
  <p><% post.tag_list.each do |t| %> 
    <span class="tag"><%= t.capitalize %></span>
    <% end %>
  </p>
  <p>
    <% if can? :destroy, post %>
    <%= link_to "Delete Post", post, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>
  </p>
</div>