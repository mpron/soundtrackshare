<div class="text-center post">
  <h1><%= link_to :username %></h1>
  <div class="video-container">
    <iframe allowFullScreen="true" allowscriptaccess="always" frameborder="0" height="430" src="http://www.youtube.com/watch?v=<%= post.url %>" title="YouTube video player" width="640"></iframe>
  </div>
  <p><% post.tag_list.each do |t| %> 
    <div class="tag"><%= t %></div>
    <% end %>
  </p>
  <p>
    <% if can? :destroy, post %>
    <%= link_to "Delete Post", post, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>
  </p>
</div>