<h1 class="text-center">New Post</h1>
<%= form_for @post, html: {class: "form"} do |f| %>
  <%= control_group_tag(post.errors[:url]) do %>
    <div class="form-group">
      <%= f.label :url, class: 'control-label' %>
      <div class="controls col-lg-4">
        <%= f.text_field :url, placeholder: "YouTube URL" %>
      </div>
    </div>
  <% end %>
  <%= control_group_tag(post.errors[:tag_list]) do %>
    <div class="form-group">
      <%= f.label :tag_list, class: 'control-label' %>
      <div class="controls col-lg-10">
        <%= f.text_area :tag_list, placeholder: "Tags (Comma-separated)" %>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Save", class: 'btn' %>
    </div>
  </div>
<% end %>