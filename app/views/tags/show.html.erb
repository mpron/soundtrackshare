<% if @tag %>
<div class="container text-center">
  <h1><%= params[:name].capitalize %></h1>
  <div class="videobox">
    <iframe allowFullScreen="true" allowscriptaccess="always" frameborder="0" height="430" src="http://www.youtube.com/embed/<%= @tag.url %>" title="YouTube video player" width="640"></iframe>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="text-center">
      <%= link_to "Share Track", new_post_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>
<br>
<br>
<div class="container text-center">
  <div class="videobox">
    <%= render @posts %>
  </div>
  <%= will_paginate @posts %>
</div>
<% end %>
