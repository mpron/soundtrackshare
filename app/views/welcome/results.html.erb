<h1 class="text-center">Results</h1>
<div class="container">
  <div class="formbox">
    <div class="row">
      <div class="form-group">
        <%= form_tag("/results", method: "get") do %>

          <%= text_field_tag(:tags, nil, class: "form-control input-lg", placeholder: "Tags (comma-separated)") %>
      <br>
      <p class="text-center">
        Match <%= select_tag(:filter, options_for_select(
          [['Any', false], ['All', true]])) %> of the Selected Tags
      </p>
      <br>

          <%= submit_tag("Search", class: "form-control btn btn-primary btn-lg") %>
          <% end %>
          <button type="button" class="btn btn-lg form-control">
          <%= link_to "Back to Search Page", search_path %>
          </button>
          <br>
      </div>
    </div>
  </div>
</div>
<div class="container">
<%= render @posts %>
<div class="text-center" ><%= will_paginate @posts %> </div>
</div>