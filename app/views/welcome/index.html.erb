    <div class="col-md-2 col-xs-12 square float-left" style="color: #628179;"></div>
    <div class="col-md-2 col-xs-12 square float-left" style="color: #21aabd;"></div>
    <div class="col-md-2 col-xs-12 square float-left" style="color: #654b6b;"></div>
